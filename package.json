{
  "name": "copilot-bootcamp",
  "version": "1.0.0",
  "description": "Monorepo with React frontend and Node backend",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "start:frontend": "npm run start --workspace=frontend",
    "start:backend": "npm run start --workspace=backend",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "npm run test --workspace=frontend",
    "test:backend": "npm run test --workspace=backend",
    "install:all": "npm install && npm run install:frontend && npm run install:backend",
    "install:frontend": "cd packages/frontend && npm install",
    "install:backend": "cd packages/backend && npm install",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:fix": "npm run lint:fix:frontend && npm run lint:fix:backend",
    "format": "npm run format:frontend && npm run format:backend",
    "format:check": "npm run format:check:frontend && npm run format:check:backend",
    "lint:frontend": "npm run lint --workspace=frontend",
    "lint:backend": "npm run lint --workspace=backend",
    "lint:fix:frontend": "npm run lint:fix --workspace=frontend",
    "lint:fix:backend": "npm run lint:fix --workspace=backend",
    "format:frontend": "npm run format --workspace=frontend",
    "format:backend": "npm run format --workspace=backend",
    "format:check:frontend": "npm run format:check --workspace=frontend",
    "format:check:backend": "npm run format:check --workspace=backend"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "prettier": "^3.6.1"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.2.0",
    "@mui/material": "^7.2.0"
  }
}
